<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    android:padding="8dp"
    android:focusable="true"
    android:foreground="@drawable/custom_ripple"
    app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:id="@+id/layout_top"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/image_profile"
                android:id="@+id/img_workrequest_profile"
                android:layout_marginStart="4dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_workrequest_profile"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/icon_right"
                android:layout_marginEnd="24dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:id="@+id/txt_workrequest_name"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Looking for"
                    android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:id="@+id/txt_workrequest_title"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:text="10 min ago"
                    android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                    android:textSize="11sp"
                    android:id="@+id/txt_workrequest_time"
                    />


            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>




</androidx.cardview.widget.CardView>
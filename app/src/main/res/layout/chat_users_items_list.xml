<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:foreground="@drawable/custom_ripple"
        android:focusable="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/image_profile"
                android:id="@+id/img_chat_user_profile"
                android:layout_marginStart="4dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_chat_user_profile"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/icon_right"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:id="@+id/txt_chat_person_name"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electrician"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    android:textSize="13sp"
                    android:id="@+id/txt_chat_user_cat"
                    />


            </LinearLayout>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/icon_right"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>